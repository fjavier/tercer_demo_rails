<% if @usuario.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      El formulario contiene<%= pluralize(@usuario.errors.count, "errores") %>.
    </div>
    <ul>
    <% @usuario.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
