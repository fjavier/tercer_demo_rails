<li>
  <span class="content"><%= micropost.contenido %></span>
  <span class="timestamp">
    Posteado <%= time_ago_in_words(micropost.created_at) %> atras.
  </span>
  <% if current_user?(micropost.usuario) %>
    <%= link_to "Eliminar", micropost, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: micropost.content %>
  <% end %>
</li>