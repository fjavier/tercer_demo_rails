<% provide(:title, @usuario.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
 		<%= gravatar_for @usuario %>
   		<%= @usuario.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @usuario.microposts.any? %>
      <h3>Microposts (<%= @usuario.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>