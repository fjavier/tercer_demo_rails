<% provide(:title, "Actualizando Perfil") %> 
<h1>Actualiza tu Perfil</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@usuario) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :nombre %>
      <%= f.text_field :name %>

      <%= f.label :correo %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirme su Password" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Aplicar Cambios", class: "btn btn-large btn-primary" %>
    <% end %>

    <%= gravatar_for @usuario %>
    <a href="http://gravatar.com/emails">Usar otro Gravatar</a>
  </div>
</div>